<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.roy.safeyapp.ui.SjfdSetup2Activity">

    <TextView
        style="@style/TextBarStyle"
        android:text="手机防盗设置界面2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="锁定SIM卡功能: \n当您更换SIM卡时,将触发报警功能"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_bind_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="锁定SIM卡/解锁SIM卡"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前SIM卡是否锁定:"
        android:textSize="26sp"
        android:gravity="center_vertical"
        />

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_lock"
        android:layout_width="60dp"
        android:src="@mipmap/ic_unlock"
        android:layout_height="60dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:onClick="prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:text="上一步"
            />

        <Button
            android:onClick="next"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:text="下一步"
            />
    </RelativeLayout>
</LinearLayout>
